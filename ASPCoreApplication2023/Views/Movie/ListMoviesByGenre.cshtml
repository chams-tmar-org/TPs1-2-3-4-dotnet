@model List<Movie>

<h2>Movies by Genre</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <!-- Add other relevant columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Genre?.GenreName</td>
                    <!-- Access other properties as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies found for the specified genre.</p>
}
